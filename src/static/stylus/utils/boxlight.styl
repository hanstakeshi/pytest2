/** no modificar css  **/
.boxlight
    opacity 0
    position relative
.box-overlay     
	position fixed
	top -500%
	width 100%
	height 100%
	background-color: #000
	opacity 0
	z-index 1011
	transition opacity .3s linear
	&.active
		top 0
		opacity 0.5
		

.wrapp-box	
	position fixed
	display table
	width 100%
	height 100%
	top -500%
	left 0
	transition opacity .3s linear
	opacity 0
	z-index 1012
	&.boxlight-h
		display block
		overflow hidden
		.wrapp-box-inner
			display block
			overflow-Y auto
		
	&.active
		opacity 1
		top 0
		.boxlight
			opacity 1
		

.wrapp-box-inner	
	display table-cell
	width 100%
	height 100%
	vertical-align middle
	
.close-boxlight	
	position absolute
	top 10px
	right 10px
	width 35px
	height 35px
	line-height 35px
	text-align center
	background-color: #FFF
	border-radius 100%
	color #000
	font-size 30px
	cursor pointer
	&:after
		content "\e605"
		font-family: 'icomoon';

	
