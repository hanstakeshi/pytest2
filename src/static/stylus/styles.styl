@import 'utils/normalize'
@import 'nib'

// Import fonts
@import 'utils/fonts'
@import 'utils/ico'
@import 'utils/boxlight'
// Import config
@import 'config/identity'
@import 'config/grid'

// General
.wancho
	width 96%
	max-width 960px
	margin auto
body
	font-size 15px
	font-family t-0
	color c-0
a
	color inherit
	&:focus
		outline none
.link
	&:hover
		text-decoration underline
		color c-1
.relative
	position relative
.left
	float left
.right
	float right
.envolve
	overflow hidden
.child-ib
	&>*
		display inline-block
		vertical-align top
.no-style
	line-height 1.4
cf()
	zoom 1
	&:after
	&:before
		content ""
		display table
	&:after
		clear both
.cf
	cf()
.g-text
	p
		margin-bottom 0
		margin-top s-5
		line-height 1.2
	p:first-child
		margin-top 0

